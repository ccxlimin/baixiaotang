@{
    ViewBag.Title = "法人认证 - 个人中心";
}

<div class="row Lmgt20">
    <div class="container">
        @Html.Partial("_UserMenu")
        <div class="col-md-9 mycenterRight">
            <div class="col-md-12">
                <h4>
                    法人认证
                </h4>
            </div>
            <div class="well">
                <div id="wrap-Auth" class="Lpdt10 clearfix">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input class="form-control" placeholder="请输入姓名" id="TrueName" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input class="form-control" placeholder="请输入身份证号码" id="MyCardID" maxlength="18" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="CardPic" placeholder="请上传身份证照片" />
                            <input style="display:none" type="file" id="selectCardPic" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="FaRenPic" placeholder="请上传营业执照照片" />
                            <input style="display:none" type="file" id="selectFaRenPic" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input class="form-control" placeholder="请输入公司单位名称" id="companyName" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input class="form-control" placeholder="请输入公司联系电话" id="companyTel" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 Ltac">
                            <a class="btn-subAuth btn btn-primary">提交认证</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    Leo.init("user", "userauth")
</script>


