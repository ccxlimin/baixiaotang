@{
    string type = Model;
    var msg2 = string.Empty;

    string[] times = type.Split('_');
    if (times[0] == "0")
    {
        msg2 += "每个月的";
    }
    else
    {
        msg2 += times[0] + "月份的";
    }
    if (times[1] == "0")
    {
        msg2 += "每周的";
    }
    else
    {
        msg2 += "第" + times[1] + "周的";
    }
    switch (times[2])
    {
        case "1": msg2 += "周一"; break;
        case "2": msg2 += "周二"; break;
        case "3": msg2 += "周三"; break;
        case "4": msg2 += "周四"; break;
        case "5": msg2 += "周五"; break;
        case "6": msg2 += "周六"; break;
        case "7": msg2 += "周日"; break;
    }
    msg2 += "到";
    switch (times[3])
    {
        case "1": msg2 += "周一"; break;
        case "2": msg2 += "周二"; break;
        case "3": msg2 += "周三"; break;
        case "4": msg2 += "周四"; break;
        case "5": msg2 += "周五"; break;
        case "6": msg2 += "周六"; break;
        case "7": msg2 += "周日"; break;
    }
    msg2 += "，每天工作时长为：" + times[4] + "小时";
    <span class="Lfs12 Lcr">@msg2</span>
}