@using AmazonBBS.Model
@using AmazonBBS.Common
@model List<LeaveWord>
@{
    ViewBag.Title = "百晓堂课程留言管理";
    List<BBSEnum> enumList = ViewBag.MenuType;
    string leaveDiy1 = ConfigHelper.AppSettings("DIY1");
    string leaveDiy2 = ConfigHelper.AppSettings("DIY2");
    string leaveDiy3 = ConfigHelper.AppSettings("DIY3");
}

<div class="row">
    <div class="col-md-2">
        @Html.Partial("_ConsoleMenu")
    </div>
    <div class="col-md-10">
        @if (Model.Count > 0)
        {
            <div>
                <a class="btn btn-primary" href="/Console/ExportLeaveWord" target="_self">导出全部留言</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>称呼</th>
                        <th>电话</th>
                        <th>年龄</th>
                        <th>@leaveDiy1</th>
                        <th>@leaveDiy2</th>
                        <th>@leaveDiy3</th>
                        <th>留言时间</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        List<LeaveWord> list = Model;
                        foreach (LeaveWord item in list)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Telephone</td>
                                <td>@item.Age</td>
                                <td>@item.DIY1</td>
                                <td>@item.DIY2</td>
                                <td>@item.DIY3</td>
                                <td>@item.CreateTime</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="well">
                暂时无人留言！
            </div>
        }
    </div>
</div>
