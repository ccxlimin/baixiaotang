@using AmazonBBS.Model
@model UserBase
@{
    ViewBag.Title = "绑定邮箱帐号";
}

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("LoginOauth", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "nmform" }))
            {
                @Html.AntiForgeryToken()
                <h4>
                    尊敬的 @ViewBag.Name 您好，请继续绑定已有邮箱帐号，绑定之后您将可以使用邮箱进行此帐号的登录：
                    <br />
                    <span style="color:red;font-size:12px;">
                        如果继续绑定，所有资料和积分将以邮箱帐号数据为准！
                    </span>
                </h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Account, "用户名", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Account, new { @class = "form-control", placeholder = "请填写正确邮箱" })
                        @Html.ValidationMessageFor(m => m.Account, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "密码", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "请输入密码" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a id="btn_logoin" class="btn btn-primary">登录并绑定</a>
                    </div>
                </div>
            }
            <p>
                没有会员？ @(Html.ActionLink("注册并绑定", "RegistOauth", new { ReturnUrl = ViewBag.ReturnUrl }))
            </p>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    Leo.init("account", "login");
</script>