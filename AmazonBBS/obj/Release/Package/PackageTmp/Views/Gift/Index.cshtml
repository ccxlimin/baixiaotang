@using AmazonBBS.Model
@using AmazonBBS.Common
@using AmazonBBS.BLL
@model GiftViewModel
@{
    int id = ViewBag.ID;
    string desc = string.Empty;
    string action = string.Empty;
    if (id == 1)
    {
        desc = "礼物";
        action = "Gift";
    }
    else if (id == 2)
    {
        desc = "数据分析";
        action = "DataAnalysis";
    }
    else
    {
        desc = "百晓堂课程";
        action = "KeCheng";
    }
    ViewBag.Title = "{0}列表".FormatWith(desc);
}
@Html.Partial("_LoadMenuDisplay", id == 3 ? -1 : 5)
<div class="clearfix">
    <h2>
        @(desc)列表
        <span class="btn-search-leo btn btn-primary Lfr">
            搜索
        </span>
        <span style="display:inline-block;float:right;width:30%">
            <input class="searchValue form-control" placeholder="搜索你想要的内容(标题/作者/用户)" />
        </span>
    </h2>
</div>
<div class="col-md-9 row gift_list">
    @Html.Partial("_Search", Model)
</div>
@*左侧栏客服图标*@
@if (id > 1)
{
    @Html.Partial("_CustomService", id)
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?2dfe690733c78332447dc3c677db923f";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>
}
@Html.Partial("/Views/AD/Index.cshtml")
<script>
    Leo.init("gift", "index",@id).screenInit();
</script>
