@using AmazonBBS.Model
@using AmazonBBS.BLL
@model MyLikeViewModel
@if (Model.MyLikes != null && Model.MyLikes.Count > 0)
{
    <ul class="list-group">
        @foreach (_MyLikeInfo like in Model.MyLikes)
        {
            <li class="list-group-item likeaction">
                @if (like.LikeType == 3)
                {
                    <a data-item="@like.BeLikedUserID|3" target="_blank" href="/user/detail/@like.BeLikedName">@like.BeLikedName</a>
                }
                else if (like.LikeType == 2)
                {
                    <a data-item="@like.ArticleId|2" target="_blank" href="/article/detail/@like.ArticleId">@like.BeLikedName</a>
                }
                else if (like.LikeType == 1)
                {
                    <a data-item="@like.QuestionId|1" target="_blank" href="/bbs/detail/@like.QuestionId">@like.BeLikedName</a>
                }
            </li>
        }
    </ul>
    <div class="mylike_page_wrap">
        @Html.Partial("_Page", Model.MyLikePage)
    </div>
    <script>
        Leo.init("user", "mylike");
    </script>
}
else
{
    <div class="well">
        你还没有关注！
    </div>
}