    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="btn_register" type="button" class="btn btn-default" value="注册" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    Leo.init("account", "register");
</script>